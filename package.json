{
  "name": "lees-barometer-reading-app",
  "version": "1.0.0",
  "description": "Lee's Barometer Reading App - A nautical-themed scientific instrument application",
  "main": "public/electron.js",
  "homepage": "./",
  "author": "Avery Pollard",
  "license": "MIT",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.lees.barometer",
    "productName": "Lee's Barometer Helper",
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/assets/**/*"
    ],
    "directories": {
      "buildResources": "public/assets"
    },
    "win": {
      "target": "nsis",
      "icon": "public/assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/assets/icon.png"
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0",
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "react-scripts": "5.0.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "wait-on": "^7.2.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}

